/**
 * @fileoverview Firestore Security Rules for the Chat Widget Assistant application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and chat widgets,
 * supplemented by a role-based access control mechanism for administrators.  It avoids
 * hierarchical authorization dependencies by denormalizing the `userId` within the `ChatWidget`
 * documents. This eliminates the need for `get()` calls in security rules to check user ownership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information. Only the user themselves can read/write
 *   their own profile.
 * - /users/{userId}/chatWidgets/{chatWidgetId}: Stores chat widget configurations owned by a
 *   specific user.  Only the owning user or an admin can manage these widgets. The userId is
 *   denormalized onto the chatWidget document.
 * - /roles_admin/{userId}:  If a document exists for a userId in this collection, the user is
 *   considered an administrator.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - All write operations are strictly controlled and require authentication.
 * - The rules leverage denormalization of the `userId` field in `ChatWidget` documents to
 *   simplify authorization logic and improve performance.
 * - Admin role is granted to users who have a document in roles_admin collection.
 *
 * Denormalization for Authorization:
 * - ChatWidget documents contain a `userId` field, eliminating the need to traverse the data
 *   hierarchy to determine ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is an admin by verifying existence of roles_admin/{userId}
     */
    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Checks if the authenticated user is the owner and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }


    /**
     * @description Security rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User 'alice' with ID 'alice_id' can create their own profile.
     *   request.auth.uid: 'alice_id'
     *   resource.data.id: 'alice_id'
     * @allow (get, update, delete) User 'alice' with ID 'alice_id' can access and modify their own profile.
     *   request.auth.uid: 'alice_id'
     * @deny (create) User 'bob' with ID 'bob_id' cannot create a profile for 'alice' with ID 'alice_id'.
     *   request.auth.uid: 'bob_id'
     *   resource.data.id: 'alice_id'
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Security rules for chat widget configurations under a user's profile.
     * @path /users/{userId}/chatWidgets/{chatWidgetId}
     * @allow (create) User 'alice' with ID 'alice_id' can create a chat widget under their profile.
     *   request.auth.uid: 'alice_id'
     *   resource.data.userId: 'alice_id'
     * @allow (get, update, delete) User 'alice' with ID 'alice_id' can access and modify their own chat widget under their profile.
     *   request.auth.uid: 'alice_id'
     * @allow (get, list) Admin can access
     *   request.auth.uid: 'admin_id'
     * @deny (create) User 'bob' with ID 'bob_id' cannot create a chat widget for 'alice' with ID 'alice_id'.
     *   request.auth.uid: 'bob_id'
     *   resource.data.userId: 'alice_id'
     * @principle Enforces document ownership for chat widgets and allows admin access.
     */
    match /users/{userId}/chatWidgets/{chatWidgetId} {
      allow get: if isSignedIn();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if (isExistingOwner(userId) && request.resource.data.userId == resource.data.userId) || isAdmin();
      allow delete: if isExistingOwner(userId) || isAdmin();
    }

    /**
     * @description Security rules for admin role assignment.
     * @path /roles_admin/{userId}
     * @allow (create) Only a privileged process (e.g., a Cloud Function with admin privileges) can create admin roles.  This rule is a placeholder and should be adjusted based on the actual admin provisioning mechanism.
     * @allow (get) Any signed-in user can check if they are an admin.
     * @deny (create, update, delete) Regular users cannot create, update, or delete admin roles directly.
     * @principle Restricts admin role management to authorized processes.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false;  // Only a privileged process can create admin roles
      allow update: if false;
      allow delete: if false;
    }
  }
}
